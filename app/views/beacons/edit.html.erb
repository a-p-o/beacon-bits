<h1>Editing beacon</h1>

<%= form_for :beacon, url: beacon_path(@beacon), method: :patch do |f| %>

  <p>
    <%= f.label :serial %><br>
    <%= f.text_field :serial %>
  </p>

  <p>
    <%= f.label :details %><br>
    <%= f.text_field :details %>
  </p>

  <p>
    <%= f.label :mac %><br>
    <%= f.text_field :mac %>
  </p>

  <p>
    <%= f.label :ip %><br>
    <%= f.text_field :ip %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', beacons_path %>
